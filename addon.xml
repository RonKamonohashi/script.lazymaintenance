<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.lazymaintenance" name="Lazy Maintenance" version="1.4" provider-name="Akisame">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Simple maintenance tools for Kodi.</summary>
    <description lang="en_GB">Simple maintenance tools for Kodi.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.jpg</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
